# Application Settings
APP_NAME="Portfolio API"
DEBUG=True
ENVIRONMENT="development"  # development or production

# Database
# For SQLite (development)
DATABASE_URL="sqlite+aiosqlite:///./portfolio.db"
# For PostgreSQL (production)
# DATABASE_URL="postgresql+asyncpg://portfolio:password@localhost:5432/portfolio_db"

# Security (REQUIRED)
# For development: use the insecure dev mode marker
SECRET_KEY="dev-mode-insecure"
# For production: generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY="your-secure-production-key-here"

# GitHub OAuth (get from https://github.com/settings/developers)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
# Development:
GITHUB_REDIRECT_URI="http://localhost:8000/api/v1/auth/github/callback"
# Production example:
# GITHUB_REDIRECT_URI="https://api.yourdomain.com/api/v1/auth/github/callback"

# Admin Configuration
ADMIN_GITHUB_ID="your-github-user-id"

# CORS Origins (comma-separated for production)
CORS_ORIGINS='["http://localhost:3000", "http://localhost:5173"]'

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Analytics (Privacy-compliant - Plausible/Umami)
ANALYTICS_ENABLED=true
ANALYTICS_SITE_ID=""  # Your Plausible/Umami site ID (e.g., dashti.se)
ANALYTICS_URL=""  # Analytics server URL (leave empty for default)

# Error Tracking (Sentry)
ERROR_TRACKING_ENABLED=true
SENTRY_DSN=""  # Sentry DSN for error tracking
SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% of transactions for performance monitoring
SENTRY_PROFILES_SAMPLE_RATE=0.1  # 10% of sampled transactions for profiling

# Performance Monitoring & Metrics
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100/minute"
RATE_LIMIT_AUTH="5/minute"
RATE_LIMIT_API="60/minute"
RATE_LIMIT_STRICT="10/minute"
RATE_LIMIT_PUBLIC="120/minute"
RATE_LIMIT_STORAGE_URI=""  # Redis URI for distributed rate limiting (optional)

# GitHub API Token (for authenticated requests - higher rate limits)
GITHUB_TOKEN=""  # Personal access token with public_repo scope

# Frontend URL (for OAuth redirect)
FRONTEND_URL="http://localhost:3000"
