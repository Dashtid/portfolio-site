# Application Settings
APP_NAME="Portfolio API"
DEBUG=True

# Database
# For SQLite (development)
DATABASE_URL="sqlite+aiosqlite:///./portfolio.db"
# For PostgreSQL (production)
# DATABASE_URL="postgresql+asyncpg://portfolio:password@localhost:5432/portfolio_db"

# Security
SECRET_KEY="your-secret-key-here-generate-with-openssl-rand-hex-32"

# GitHub OAuth (get from https://github.com/settings/developers)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_REDIRECT_URI="http://localhost:8001/api/v1/auth/github/callback"

# Admin Configuration
ADMIN_GITHUB_ID="your-github-user-id"

# CORS Origins (comma-separated for production)
CORS_ORIGINS='["http://localhost:3000", "http://localhost:5173"]'

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Analytics (Privacy-compliant - Plausible/Umami)
ANALYTICS_ENABLED=true
ANALYTICS_SITE_ID=""  # Your Plausible/Umami site ID (e.g., dashti.se)
ANALYTICS_URL=""  # Analytics server URL (leave empty for default)

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_DSN=""  # Optional: Sentry DSN for enhanced error tracking

# Performance Monitoring & Metrics
METRICS_ENABLED=true