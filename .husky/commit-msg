#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check commit message format (Conventional Commits)
echo "üìù Checking commit message format..."

commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|ci|build)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Commit message must follow Conventional Commits format:"
    echo "  <type>[optional scope]: <description>"
    echo ""
    echo "Examples:"
    echo "  feat: add theme toggle functionality"
    echo "  fix(nav): resolve mobile menu issue"
    echo "  docs: update README with deployment info"
    echo ""
    echo "Valid types: feat, fix, docs, style, refactor, perf, test, chore, ci, build"
    exit 1
fi

echo "‚úÖ Commit message format is valid!"