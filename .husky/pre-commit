#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Run security check
echo "🔒 Running security check..."
npm run security:audit

# Validate HTML
echo "📝 Validating HTML..."
npm run validate:html

echo "✅ Pre-commit checks passed!"